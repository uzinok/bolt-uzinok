# преобразование всех файлов сайта в нужную кодировку и указание браузеру тип кодировки
AddDefaultCharset utf-8
AddCharset utf-8 *
<IfModule mod_charset.c>
    CharsetSourceEnc utf-8
    CharsetDefault utf-8
</IfModule>

# переход на собственный файл ошибки "error 404"
ErrorDocument 404 /404/

Options +FollowSymLinks
RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_URI} ^/404/$
RewriteRule ^(.*)$ /404/ [L]

RewriteCond %{REQUEST_URI} ^/500/$
RewriteRule ^(.*)$ /404/ [L]

RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

RewriteCond %{HTTP_HOST} ^[^www\.].*$ [NC]
RewriteRule ^/?([a-z0-9\-/]+)/?$ /index.html?s=$1&p=$2 [L]
