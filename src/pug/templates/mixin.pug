mixin mainPage(heading, subHeading)
	header.main__header
		.container
			h1 #{heading}
			if (subHeading)
				p #{subHeading}

mixin codeBlock(title, code)
	code.code
		p.code__header #{title}
			button.code__copy(type="button")
				span.visually-hidden копировать
		pre
			| #{code}

mixin articleCard(title, descCard, file)
	h3 #{title}
	p #{descCard}
	a(href=`#{file}`) подробнее
