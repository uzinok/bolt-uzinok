block variables

include mixin.pug

<!DOCTYPE html>
html(lang="ru")
	head
		//- удалить
		meta(name="robots", content="noindex")
		//- /удалить
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")

		if idPage == 'index'
			base(href='./')
		else if group == 'other'
			base(href='../../')
		else
			base(href='../../../')

		if idPage == 'index'
			link(rel="preload", href="./fonts/Roboto-Regular.woff2", as="font", type="font/woff2", crossorigin)
			link(rel="preload", href="./fonts/RobotoCondensed-Regular.woff2", as="font", type="font/woff2", crossorigin)
			link(rel="preload", href="./styles/index.min.css", as="style")
			link(rel="preload", href="./scripts/index.min.js", as="script")
			link(rel="preload", href="./img/home/cloud-1.png", as="image")
			link(rel="preload", href="./img/home/cloud-2.png", as="image")
			link(rel="preload", href="./img/home/bg_footer@768.png", as="image", media="(max-width: 768px)")
			link(rel="preload", href="./img/home/bg_footer@1280.png", as="image", media="(min-width: 1280px)")
			link(rel="preload", href="./img/home/bg_footer@2000.png", as="image", media="(min-width: 2000px)")
		else
			link(rel="preload", href="./fonts/Roboto-Regular.woff2", as="font", type="font/woff2", crossorigin)
			link(rel="preload", href="./fonts/RobotoCondensed-Regular.woff2", as="font", type="font/woff2", crossorigin)
			if group != 'other'
				link(rel="preload", href="./fonts/RobotoMono-Regular.woff2", as="font", type="font/woff2", crossorigin)
			link(rel="preload", href="./styles/main.min.css", as="style")
			link(rel="preload", href="./scripts/main.min.js", as="script")

		link(rel='apple-touch-icon' sizes='180x180' href='img/favicon/apple-touch-icon.png')
		link(rel='icon' type='image/png' sizes='32x32' href='img/favicon/favicon-32x32.png')
		link(rel='icon' type='image/png' sizes='16x16' href='img/favicon/favicon-16x16.png')
		link(rel='manifest' href='img/favicon/site.webmanifest')
		link(rel='mask-icon' href='img/favicon/safari-pinned-tab.svg' color='#5bbad5')
		meta(name='msapplication-square70x70logo' content='img/favicon/mstile-70x70.png')
		meta(name='msapplication-square144x144logo' content='img/favicon/mstile-144x144.png')
		meta(name='msapplication-square150x150logo' content='img/favicon/mstile-150x150.png')
		meta(name='msapplication-wide310x150logo' content='img/favicon/mstile-310x150.png')
		meta(name='msapplication-square310x310logo' content='img/favicon/mstile-310x310.png')
		meta(name='msapplication-TileColor' content='#2d89ef')
		meta(name='theme-color' content='#ffffff')

		meta(property="og:title", content="Записки верстальщика")
		meta(property="og:description", content="Собрание демок и фич для верстальщиков")
		meta(property="og:image", content="img/favicon/open-graph.jpg")

		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		title #{pageTitle}
		meta(name="description", content=`${desc}`)

		if idPage == 'index'
			link(rel="stylesheet", href="styles/index.min.css")
		else
			link(rel="stylesheet", href="styles/main.min.css")

	body(class=idPage == 'index' ? 'no-js index' : 'no-js')
		script(src=idPage == 'index' ? 'scripts/index.min.js' : 'scripts/main.min.js')

		noindex(style="display: grid;grid-template-columns: 100%;grid-template-rows: auto 1fr auto;min-width: 320px;min-height: 100vh;")
			if idPage == 'index'
				canvas#bg-canvas.bg-canvas

			include header.pug

			main(class=idPage == 'index' ? '' : 'main')
				if idPage != 'index'
					+mainHeader(heading, subHeading, group)

				block main

			include footer.pug
