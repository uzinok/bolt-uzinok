header.header(class=idPage == 'index' ? 'header--index' : '')
	.header__container.container

		nav.header__nav

			if idPage != 'index'
				a.header__logo(href="./", aria-label="Записки верстальщика")
					svg(width="60", height="60", role="img", aria-label="Логотип Записки верстальщика")
						use(href="img/sprite.svg#logo")
					span Записки верстальщика


			ul.header__list
				li.header__item
					a.header__link(href=idPage == 'index' ? '#css' : 'article/css/', aria-current=idPage == 'css' ? 'page' : 'false') CSS
				li.header__item
					a.header__link(href="#js") JS
				li.header__item
					a.header__link(href="#svg") SVG
				li.header__item
					a.header__link(href="#article") Статьи
