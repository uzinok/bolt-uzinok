			+codeBlock('css', `.top-menu {
  margin: 0;
  padding: 0;
  list-style-type: none;
  display: flex;
}

.top-menu button,
.top-menu a {
  appearance: none;
  text-decoration: none;
  display: block;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: inherit;
  padding: 6px;
  background-color: beige;
  font-family: Arial, Helvetica, sans-serif;
  transition: color 0.25s ease-in-out, background-color 0.25s ease-in-out;
  color: #0000EE;
}

.top-menu button:hover,
.top-menu a:hover {
  background-color: azure;
}

.top-menu button:active,
.top-menu a:active {
  color: #EE0000;
}

.top-menu button:focus,
.top-menu a:focus {
  outline-offset: -1px;
}

.sub-menu {
  display: none;
}

.parent-item {
  position: relative;
}

.parent-item>button {
  padding-right: calc(5px + 7px + 5px);
  background-image: url(../img/arrow-down.svg);
  background-repeat: no-repeat;
  background-position: right 5px center;
  background-size: 7xp auto;
  border: 0;
}

.parent-item:hover>button,
.parent-item:focus-within>button {
  background-image: url(../img/arrow-up.svg);
}

.parent-item:hover>.sub-menu,
.parent-item:focus-within>.sub-menu {
  display: flex;
  flex-direction: column;
  width: max-content;
  position: absolute;
  list-style-type: none;
  margin: 0;
  padding: 0;
  left: 0;
}

.sub-menu .parent-item:focus-within .sub-menu,
.sub-menu .parent-item:hover .sub-menu {
  left: 100%;
  top: 0
}
`)
